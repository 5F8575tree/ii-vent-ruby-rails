<div data-controller="tab-members">
  <div class="container-fluid">
    <ul class="nav nav-pills nav-fill">
      <li class="nav-item">
        <a class="nav-link active" data-tab-target="tabManagers tab" data-action="click->tab#toggle">Managers</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-tab-target="tabArtists tab" data-action="click->tab#toggle">Artists</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-tab-target="tabSecurity tab" data-action="click->tab#toggle">Security</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-tab-target="tabStaff tab" data-action="click->tab#toggle">Staff</a>
      </li>
    </ul>
  </div>
  <div class="container d-flex justify-content-end">
    <button type="button" class="add-btn"><i class="fa-solid fa-plus"></i> Add a member</button>
  </div>
  <div class="" data-tab-target="pages pagesManager">
    <% event.event_members.organizer.each do |manager| %>
      <div class="container-fluid">
        <div class="card-product">
        <% if manager.user.avatar_url.blank? %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
        <% else %>
          <img src="<%= manager.user.avatar_url %>" alt="">
        <% end %>
        <div class="card-product-infos">
          <h2><%= manager.user.first_name %> <%= manager.user.last_name %></h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-none" data-tab-target="pages pagesArtist">
    <% artists.each do |artist|  %>
      <div class="container-fluid">
        <div class="card-product">
        <% if artist.user.avatar_url.blank? %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
        <% else %>
          <img src="<%= artist.user.avatar_url %>" alt="">
        <% end %>
          <div class="card-product-infos">
            <h2><%= artist.user.first_name %> <%= artist.user.last_name %></h2>
            <p><%= artist.user.role %> <strong>relevant info</strong> only.</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-none" data-tab-target="pages pagesSecurity">
    <% securities.each do |security|  %>
      <div class="container-fluid">
        <div class="card-product">
        <% if security.user.avatar_url.blank? %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
        <% else %>
          <img src="<%= security.user.avatar_url %>" alt="">
        <% end %>
          <div class="card-product-infos">
            <h2><%= security.user.first_name %> <%= security.user.last_name %></h2>
            <p><%= security.user.role %> <strong>relevant info</strong> only.</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-none" data-tab-target="pages pagesStaff">
    <% staffs.each do |staff|  %>
      <div class="container-fluid">
        <div class="card-product">
        <% if staff.user.avatar_url.blank? %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
        <% else %>
          <img src="<%= staff.user.avatar_url %>" alt="">
        <% end %>
          <div class="card-product-infos">
            <h2><%= staff.user.first_name %> <%= staff.user.last_name %></h2>
            <p><%= staff.user.role %> <strong>relevant info</strong> only.</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
