<div data-controller="tab">
  <div class="container-fluid">
    <ul class="nav nav-pills nav-fill">
      <li class="nav-item">
        <a class="nav-link active" data-tab-target="tabMain tab" data-action="click->tab#toggle">Main</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-tab-target="tabMembers tab" data-action="click->tab#toggle">Members</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-tab-target="tabTasks tab" data-action="click->tab#toggle">Tasks</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-tab-target="tabMessages tab" data-action="click->tab#toggle">Messages</a>
      </li>
    </ul>
  </div>
  <div class="" data-tab-target="pages pagesMain" data-action="click->tab#toggle">
    <%= render "shared/main", event: @event %>
  </div>
  <div class="d-none" data-tab-target="pages pagesMembers" data-action="click->tab#toggle">
    <%= render "shared/members", event: @event %>
  </div>
  <div class="d-none" data-tab-target="pages pagesTasks" data-action="click->tab#toggle">
  </div>
  <div class="d-none" data-tab-target="pages pagesMessages" data-action="click->tab#toggle">
  </div>
</div>
