
<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<div class="landing-main">
  <div class="top-div">
    <div class="left-div">
      <h3 id="landing-logo">ii-vent</h3>
    </div>

    <div class="right-div">
      <% if current_user %>
        <%= link_to "Logout", '#', class: "brand-btn me-4" %>
      <% else %>
        <%= link_to "Login", '#', class: "brand-btn" %>
        <%= link_to "Signup", '#', class: "grey-btn" %>
      <% end %>
    </div>
  </div>

  <div class="container landing-container">
    <h1 id="landing-title">Make your next event an ii-vent</h1>
    <p>
      <%= link_to 'Create Event', '#', class: "brand-btn" %>
    </p>
  </div>
</div>
